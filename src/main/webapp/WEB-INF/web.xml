<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <filter>
        <filter-name>SAMLFilter</filter-name>
        <filter-class>
            com.salesforce.saml.sp.SAMLFilter
        </filter-class>
        <init-param>
            <param-name>environment</param-name>
            <param-value>https://login-blitz03.soma.salesforce.com</param-value>
        </init-param>
        <init-param>
            <param-name>redirect_uri</param-name>
            <param-value>https://localhost:8888/oauth/_callback</param-value>
        </init-param>
    </filter>


    <filter-mapping>
        <filter-name>SAMLFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



</web-app>
